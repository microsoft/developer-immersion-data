{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": [ "error", 4 ],
    "quotes": [ "error", "single" ],
    "no-console": 0,
    "semi": [ "error", "always" ],
    "strict": [ "error"],
    "no-multiple-empty-lines": [
      "error",
      {
        "max": 1,
        "maxBOF": 0
      }
    ],
    "no-unused-vars": [ "error" ],
    "key-spacing": [
      "error",
      {
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "object-curly-spacing": [ "error", "always" ],
    "radix": [ "error" ],
    "keyword-spacing": [ "error" ],
    "space-before-blocks": [ "error", "always" ],
    "space-in-parens": [ "error", "never" ],
    "space-unary-ops": [
      "error",
      {
        "words": true,
        "nonwords": false
      }
    ],
    "brace-style":  ["error"]
  }
}
